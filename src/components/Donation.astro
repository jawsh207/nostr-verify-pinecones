---
import { CopyWrapper } from './CopyWrapper.tsx'
import { AstroQRCode } from './AstroQRCode.tsx';
export interface Props {
	lnUrl: string;
  costsMonthly: string;
}

const { lnUrl, costsMonthly } = Astro.props
---

<section class="donation">
  <p>
This service it's provided for free but does cost {costsMonthly}/month to operate.
	
</p>
  <p>
     If you find it useful, please consider a small Lightning âš¡ donation to help keep it running:

  </p>

  <AstroQRCode lnUrl={lnUrl} client:only />

  <div class="or">or</div>

  <CopyWrapper
    text={lnUrl}
    client:visible
  >
    <div class="box copy-box">
      <code>
        {lnUrl}
      </code>
      <button><img src="images/copy-icon.svg" /></button>
    </div>
  </CopyWrapper>
</section>

<style>
  .donation {
    border-top: 1px solid rgb(var(--accent));
    display: block;
    margin-top: 2rem;
    padding-top: 1rem;
  }

  .or {
    margin: 1rem 0;
    text-align: center;
  }

  code {
    display: block;
    font-size: 0.75em;
    overflow: hidden;
    text-align: center;
    text-overflow: ellipsis;
  }
</style>
